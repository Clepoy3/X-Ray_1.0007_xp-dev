function parse_list_new(iniFileName,sec,val,convert) counterAdd("rx_utils.parse_list_new")
	local tmp = Parse_StrToTbl(read_from_ini_new(iniFileName,sec,val,"",1),",")
	if convert and #tmp ~= 0 then
		local t = {}
		for i = 1, #tmp do
			t[tmp[i]] = true
		end
		return t
	end
	return tmp
end

