		end
	end
	return r,p
end]]

function collect_sections_new(iniFileName,sections) counterAdd("rx_utils.collect_sections_new")
	
	local r,p = {},{}
	local v, n
	local res,id,val
	local ini = g_ini_file(iniFileName)
	for i = 1, #sections do
		v = sections[i]
		if ini:section_exist(v) then
			n = ini:line_count(v)
			if n > 0 then
				for i = 0,n-1 do
					res,id,val = ini:r_line(v,i,"","")
					if r[id] == nil then
						r[id] = val
					end
				end
			end
			p[i] = n
		else
			p[i] = 0
		end
	end
	return r,p
end

