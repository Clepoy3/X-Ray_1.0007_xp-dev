function unload_weapon( tbl_name )
	local tbl = amk.load_table( tbl_name )
	if tbl then
		for i=1,#tbl do
			local obj_id = tbl[ i ]
			if obj_id ~= nil then
				local wpn = level.object_by_id( obj_id )
				wpn:unload_magazine()
			end
		end
	end
	amk.del_variable( tbl_name )
end

