--///////////////////////////
function StringSplit( sStr, sDiv, mode )
    local tRet = {}
    local sPatt
	if sDiv then sPatt = '[^%s%'..sDiv..']+'
        for sValue in sStr:gmatch( sPatt ) do
			if mode == true then
				tRet[ sValue ] = true
			else
				table.insert( tRet, sValue )
			end
        end
    end
	return tRet
end

