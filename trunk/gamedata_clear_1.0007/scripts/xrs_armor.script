function look_for_armor(sobj,vis)
	if vis then
		local t = xrs_utils.read_stalker_params(sobj)
		t.visual = vis
		xrs_utils.write_stalker_params(t,sobj)
		return true
	end
	return false
end

local auchecktime = auto_upgrades and time_global() + 33000 or nil
function update()
	for k,v in pairs(convert_npc) do
		local obj=level.object_by_id(k)
		local sobj=alife():object(k)
		if sobj then
			if obj~=nil and v=="turn_off" then
				obj:stop_talk()
				switch_offline(obj)
				convert_npc[k]="turn_on"
			elseif obj==nil and v=="turn_on" then
				switch_online(k)
				convert_npc[k]=false
			elseif v==false then
				convert_npc[k]=nil
			end
		else
			convert_npc[k]=nil
		end
	end

	--armor upgrade part
	if auto_upgrades==true and auchecktime < time_global() then
		auchecktime = time_global()+27890
		local gtime = game.get_game_time()
	    local time = level.get_time_days()*60*24+level.get_time_hours()*60+level.get_time_minutes()
		if xr_logic.pstor_retrieve(db.actor,"xrs_armor_t",nil)==nil then
			xr_logic.pstor_store(db.actor,"xrs_armor_t", time+upgrade_delta)
		end
		if time>xr_logic.pstor_retrieve(db.actor,"xrs_armor_t",0) then
			xr_logic.pstor_store(db.actor,"xrs_armor_t",time+upgrade_delta)
			local stalkers = {}
			local alife,gg = alife(),game_graph()
			for a=1,65534 do
				local sobj = alife:object(a)
				if sobj and IsStalker(sobj) and sobj:alive() and not sobj.wounded and sobj:health()>0.3 and not excluded_npcs[sobj:name()] then
					if sobj.m_game_vertex_id and gg:valid_vertex_id(sobj.m_game_vertex_id) then
						local map = alife:level_name(gg:vertex(sobj.m_game_vertex_id):level_id())
						if map and upgrade_top_lvl[map]~=nil then
							local lvl = get_npc_level(sobj)
							if lvl<upgrade_top_lvl[map] or math.random()<upgrade_over_top_chance then
								if not stalkers[lvl] then
									stalkers[lvl]={}
								end
								table.insert(stalkers[lvl],sobj)
							end
						end
					end
				end
			end
			local max_lvl = table.getn(upgrade_steps)-1
			if max_lvl>0 then
				for a=0,max_lvl do
					if stalkers[a]~=nil and upgrade_steps[a]~=nil and upgrade_steps[a].npc_num~=nil and upgrade_steps[a].prb~=nil then
						for b = 1,upgrade_steps[a].npc_num do
							local cnt = table.getn(stalkers[a])
							if cnt>0 then
								local idx=math.random(cnt)
								local sobj=stalkers[a][idx]
								if math.random()<upgrade_steps[a].prb then
									if select_next_visual(sobj,visible_auto_upgrades)==true then
										if not stalkers[a+1] then
											stalkers[a+1]={}
										end
										table.insert(stalkers[a+1],sobj)
									end
									table.remove(stalkers[a],idx)
								end
							end
						end
					end
				end
			end
		end
	end
end

function select_next_visual(sobj,now)
	local level = get_npc_level(sobj)
	local com = sobj:community()
	if com and armors_by_community[com] and table.getn(armors_by_community[com])>0 then
		local new_vis=""
		local nl=100
		for vname,allowed_armors in pairs(armors_by_community[com]) do
			if armors_by_visuals[allowed_armors] then
				for k,v in pairs(armors_by_visuals[allowed_armors]) do
					if v>level and v<=nl then
						if v<nl then
							new_vis = allowed_armors.."\\"..k
						elseif v==nl and math.random()>0.5 then
							new_vis = allowed_armors.."\\"..k
						end
						nl=v
					end
				end
			end
		end

		if new_vis~="" then
			change_vis(sobj.id,"actors\\"..new_vis,nl,now)
			return true
		end
	end
	return false
end
