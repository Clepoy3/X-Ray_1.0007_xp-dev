function npc_update(npc,binder)
	if not binder.armor_check_update then
		binder.armor_check_update = time_global()+11000
	elseif binder.armor_check_update<time_global() then
		binder.armor_check_update=time_global()+8360
		if npc:wounded() or npc.health < 0.3 or excluded_npcs[npc:name()] or excluded_npcs[npc:profile_name()] then
			return
		end
		local com = npc:character_community()
		if suits_to_visuals[com] then
			local dist_to_actor = npc:position():distance_to(db.actor:position())
			if not db.actor:see(npc) and dist_to_actor>15 or dist_to_actor>100 then
				local best_level,best_vis,best_id = get_npc_level(npc)
				for i=0,npc:object_count()-1 do
					local item = npc:object(i)
					if item:clsid() == clsid.equ_stalker_s then
						local vis = check_armor(npc,item)
						if best_level < (armor_levels[vis] or 0) then
							best_level = armor_levels[vis]
							best_vis = vis
							best_id = item:id()
						end
					end
				end
				if best_vis then
					change_vis(npc:id(),"actors\\"..suits_to_visuals[com][best_vis][math.random(#suits_to_visuals[com][best_vis])],armor_levels[best_vis],true)
					alife():release(alife():object(best_id))
				end
			end
		end
	end
end

function check_armor(npc, item, just_report)
	local com = npc:character_community()
	local section = item:section()
	local sini = system_ini()
	local vis = utils.cfg_get_string(sini, section, "visual", false, false, false, "")
	if vis ~= "" then
		vis = xrs_utils.str_explode("\\",vis)
		vis = xrs_utils.str_explode(".",vis[2])
		vis = vis[1]
		if suits_to_visuals[com][vis] then
			if just_report then
				if table.getn(suits_to_visuals[com][vis])>0 and get_npc_level(npc)<(armor_levels[vis] or 0) then
					return true
				end
			else
				if table.getn(suits_to_visuals[com][vis])>0 then
					return vis
				end
			end
		end
	end
end

function get_npc_level(obj)
	if obj.character_rank then
		return math.floor(obj:character_rank()/upgrade_exp)
	else
		return math.floor(obj:rank()/upgrade_exp)
	end
	return 0
end
